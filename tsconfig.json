{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": ["node", "mocha"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "test"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "tests"]
}
